<%= form_with model: @users, class: "nifty_form" do |f| %>
<div>
<p>User name</p>
<%= f.text_field :name %>
</div>
<div>
<p>Password</p>
<%= f.password_field :password %>
</div>
<p>Password confirmation</p>
<%= f.password_field :password_confirmation %>
</div>
<div>
<%= f.submit "Create user"%>
</div>
<% end %>
