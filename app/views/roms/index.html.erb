<section>
<main class="conteiner">
<% @roms.each do |rom| %>
<% if rom.image_url==nil%>
<article>
    <%= link_to('image', rom_path(rom))  %>
    <h2 class="rom-name"><%= rom.name %></h2>
</article>
<% end %>
    <% if rom.image_url %>
    <article>
    <%= link_to(image_tag(rom.image_url, class: 'rom-image'), rom_path(rom))  %>
    <h2 class="rom-name"><%= rom.name %></h2>
    <% if session[:user_name]%>
    <%= link_to 'Edit', edit_rom_path(rom) %>
    <%= link_to 'Destroy', rom, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>
    </article>
    <% end %>
<% end %>
<% if session[:user_name]%>
<%= link_to 'New Rom', new_rom_path %>
<%end%>
</main>
</section>
<footer>
<%= link_to 'Login', login_path unless session[:user_name] %>
<% if session[:user_name]%>
<%= link_to 'Logout', logout_path %>
<%= link_to 'New Rom', new_rom_path %>
<%end%>
</footer>